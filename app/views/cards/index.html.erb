<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Artist</th>
      <th>Type</th>
      <th>Cost</th>
      <th>Set</th>
      <th>Rarity</th>
      <th>Power</th>
      <th>Toughness</th>
      <th>Identity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.name %></td>
        <td><%= card.title %></td>
        <td><%= card.artist %></td>
        <td><%= card.type %></td>
        <td><%= card.cost %></td>
        <td><%= card.set %></td>
        <td><%= card.rarity %></td>
        <td><%= card.power %></td>
        <td><%= card.toughness %></td>
        <td><%= card.identity %></td>
        <td><%= link_to 'Show', card %></td>
        <td><%= link_to 'Edit', edit_card_path(card) %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_card_path %>
